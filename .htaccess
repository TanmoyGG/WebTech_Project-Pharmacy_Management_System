# Disable directory listing
Options -Indexes

# Apache configuration - Route all requests to index.php
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /WebTech_Project-Pharmacy_Management_System/
    
    # Allow real files to be accessed directly
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Allow real directories to be accessed directly
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Route everything else to index.php with the URL as a parameter
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>
